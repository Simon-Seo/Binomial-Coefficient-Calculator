<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="comsimon_seo.github.binomcoeffcalc.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Binomial Coefficient Calculator"
        android:id="@+id/textView_title"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Integer n:"
        android:id="@+id/textView_int_n"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView_title"
        android:layout_alignLeft="@+id/textView_title"
        android:layout_alignStart="@+id/textView_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_int_n"
        android:layout_below="@+id/textView_int_n"
        android:layout_alignLeft="@+id/textView_int_k"
        android:layout_alignStart="@+id/textView_int_k"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/textView_title"
        android:layout_alignEnd="@+id/textView_title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Integer k:"
        android:id="@+id/textView_int_k"
        android:layout_above="@+id/editText_int_k"
        android:layout_alignRight="@+id/textView_int_n"
        android:layout_alignEnd="@+id/textView_int_n"
        android:layout_marginBottom="22dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editText_int_k"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView_int_k"
        android:layout_alignStart="@+id/textView_int_k"
        android:layout_alignRight="@+id/editText_int_n"
        android:layout_alignEnd="@+id/editText_int_n" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate nCk"
        android:id="@+id/button_output"
        android:layout_below="@+id/editText_int_k"
        android:layout_alignLeft="@+id/editText_int_k"
        android:layout_alignStart="@+id/editText_int_k"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_result"
        android:layout_below="@+id/button_calculate"
        android:layout_alignLeft="@+id/button_calculate"
        android:layout_alignStart="@+id/button_calculate"
        android:layout_marginTop="22dp"
        android:layout_alignRight="@+id/editText_int_k"
        android:layout_alignEnd="@+id/editText_int_k" />

</RelativeLayout>
